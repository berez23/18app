<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage x:Class="Italia.DiciottoApp.Views.NewCouponProductPage"
                xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Italia.DiciottoApp.Views"
                xmlns:vm="clr-namespace:Italia.DiciottoApp.ViewModels"
                ControlTemplate="{StaticResource AppHeaderTemplate}" >

    <views:BasePage.BindingContext>
        <vm:NewCouponProductViewModel />
    </views:BasePage.BindingContext>

    <views:BasePage.Content>
        <Grid BackgroundColor="{StaticResource ContentBkgndColor}"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              RowSpacing="0" ColumnSpacing="0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Content header -->
            <Label Grid.Row="0" Margin="16,16,16,0"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="StartAndExpand"
                   Style="{StaticResource RegularLabelStyle}"
                   TextColor="#FFAAAAAA" FontSize="14"
                   Text="{Binding ContentHeader}"
                   />

            <!-- Shop list -->
            <ListView Grid.Row="1" Margin="16,0,16,0"
                      ItemsSource="{Binding Categories, Mode=OneWay}"
                      HasUnevenRows="true" IsVisible="{Binding ShopListIsVisible}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="0" Spacing="0"
                                         Orientation="Horizontal">

                                <Image Source="{Binding ImageSource}"
                                       HeightRequest="22" WidthRequest="22"
                                       VerticalOptions="Center"/>

                                <Label Margin="0"
                                       HorizontalOptions="Start" VerticalOptions="Center"
                                       Style="{StaticResource RegularLabelStyle}"
                                       TextColor="#FF596672" FontSize="16"
                                       Text="{Binding Title}" />

                                <Label Margin="18,0,6,0"
                                       HorizontalOptions="End" VerticalOptions="Center"
                                       Style="{StaticResource RegularLabelStyle}"
                                       TextColor="#FF596672" FontSize="16"
                                       Text=">" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </views:BasePage.Content>
</views:BasePage>