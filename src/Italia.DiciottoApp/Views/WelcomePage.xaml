<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Italia.DiciottoApp.Views.WelcomePage"
             BackgroundColor="#0066CC"
             BackgroundImage="bkgnd_libri.png" >

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="BoldLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="44" />
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="TitilliumWeb-Bold" />
                            <On Platform="Android" Value="fonts/TitilliumWeb-Bold.ttf#TitilliumWeb-Bold" />
                            <On Platform="UWP" Value="Assets/Fonts/TitilliumWeb-Bold.ttf#TitilliumWeb" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ItalicLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="54" />
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="TitilliumWeb-Italic" />
                            <On Platform="Android" Value="fonts/TitilliumWeb-Italic.ttf#TitilliumWeb-Italic" />
                            <On Platform="UWP" Value="Assets/Fonts/TitilliumWeb-Italic.ttf#TitilliumWeb" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="RegularLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="22" />
                <Setter Property="FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="TitilliumWeb-Regular" />
                            <On Platform="Android" Value="fonts/TitilliumWeb-Regular.ttf#TitilliumWeb-Regular" />
                            <On Platform="UWP" Value="Assets/Fonts/TitilliumWeb-Regular.ttf#TitilliumWeb" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout BackgroundColor="#0066CC"
                         AbsoluteLayout.LayoutBounds="0,0,1,.1"
                         AbsoluteLayout.LayoutFlags="All"
                         Spacing="0" >
                <Image Source="header_logo.jpg" Margin="0"/>
            </StackLayout>

            <StackLayout  Spacing="0" VerticalOptions="Center"
                          AbsoluteLayout.LayoutBounds="0.5,0.5,1,.8"
                          AbsoluteLayout.LayoutFlags="All">
                <Label Text="Hai 18 anni?"
                       Style="{StaticResource Key=BoldLabelStyle}" />
                <Label Text="Per te"
                       Style="{StaticResource Key=RegularLabelStyle}"
                       Margin="0,-7,0,0"/>
                <Image Source="bonus.png" Margin="0,8,0,0" Scale=".8"/>
                <Label Text="da spendere in"
                       Style="{StaticResource Key=RegularLabelStyle}" />
                <Label x:Name="ExpenceTitle" Text="libri "
                       Style="{StaticResource Key=ItalicLabelStyle}"
                       FontAttributes="Italic"
                       Margin="0,38,0,0" />
            </StackLayout>
        </AbsoluteLayout>
        
     </ContentPage.Content>
</ContentPage>